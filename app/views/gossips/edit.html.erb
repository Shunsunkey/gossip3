<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="text-center">Édition du Potin</h1>
      <%= form_tag(gossip_path(@gossip), method: :patch) do %>
        <div class="form-group">
          <%= label_tag :title %>
          <%= text_field_tag :title, @gossip.title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :description %>
          <%= text_area_tag :description, @gossip.description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :tag_id, "Sélectionnez un tag :" %>
          <%= select_tag "gossip[tag_ids][]", options_from_collection_for_select(@tags, :id, :name, @gossip.tag_ids), multiple: true, class: "form-control" %>
        </div>
        <div class="text-center">
          <%= submit_tag "Mettre à jour", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
