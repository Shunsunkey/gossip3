<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= form_with(model: comment, url: gossip_comments_path(@gossip)) do |form| %>
        <div class="form-group">
          <%= form.text_area :text, class: "form-control", placeholder: "Ajouter un commentaire..." %>
        </div>
        <div class="text-center">
          <%= form.submit "Ajouter commentaire", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
